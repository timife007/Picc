<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="list_item">
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:textColor">
            @color/black
        </item>

    </style>
    <style name="list_details_title">
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textStyle">
            bold
        </item>

    </style>
    <style name="list_details_body">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textStyle">
            normal
        </item>

    </style>
    <style name="icon_detail_text">
        <item name="android:textSize">
            23sp
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textStyle">
            normal
        </item>

    </style>
    <style name="error_title_text">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:minLines">
           2
        </item>
        <item name="android:maxLines">
            2
        </item>

    </style>
    <style name="alert_dialog_text">
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textSize">
            15sp
        </item>
        <item name="android:textStyle">
            normal
        </item>
    </style>

    <style name="dialog_text_button">
        <item name="android:textColor">
            @color/dialog_button
        </item>
        <item name="android:textSize">
            18sp
        </item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents.Body.Text.style">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="titleCentered">true</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/dialog_text_button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>
    <style name="MaterialAlertDialog.MaterialComponents.Body.Text.style" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">
            18sp
        </item>

    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/dialog_button</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>